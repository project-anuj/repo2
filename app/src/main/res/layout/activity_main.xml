<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".MainActivity">

    <GridLayout

        android:id="@+id/grid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"

        android:layout_centerVertical="true"

        android:columnCount="3"
        android:rowCount="3"
        >


        <ImageView
            android:id="@+id/iv0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="play"
            android:tag="0"
            android:background="@drawable/border"

            />


        <ImageView
            android:id="@+id/iv1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"

            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:onClick="play"
            android:tag="1"
            android:background="@drawable/border"
            />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="2"
           android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:onClick="play"
            android:tag="2"
            android:background="@drawable/border"

            />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:onClick="play"
            android:tag="3"
            android:background="@drawable/border"
            />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="70dp"
            android:onClick="play"
            android:tag="4"
            android:background="@drawable/border"
            />

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="2"

            android:layout_marginTop="70dp"
            android:onClick="play"
            android:tag="5"
            android:background="@drawable/border"
            />

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:onClick="play"
            android:tag="6"
            android:background="@drawable/border"
            />

        <ImageView
            android:id="@+id/iv7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="80dp"
            android:onClick="play"
            android:tag="7"
            android:background="@drawable/border"
            />

        <ImageView
            android:id="@+id/iv8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="2"

            android:layout_marginTop="80dp"

            android:layout_marginBottom="10dp"
            android:onClick="play"
            android:tag="8"
            android:background="@drawable/border"
            />

    </GridLayout>

    <LinearLayout
        android:id="@+id/playAgainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:padding="30dp"
        android:visibility="invisible"
        android:layout_margin="40dp">

        <TextView
            android:id="@+id/playAgainTv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"

            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:fontFamily="casual"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:orientation="horizontal">

            <Button
                android:id="@+id/playAgainBt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="playAgain"
                android:text="Play Again" />

            <Button
                android:id="@+id/exitBt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:onClick="exit"
                android:text="EXIT" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/aboutLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#6975A6"
        android:visibility="invisible"
        >
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nameTv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textSize="40dp"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_columnSpan="2"
                android:layout_row="0"/>
            <TextView
                android:id="@+id/nameTv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match Played "
                android:textSize="30dp"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_column="0"
                android:layout_row="1"/>
            <TextView
                android:id="@+id/nameTv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match Win     :"
                android:textSize="30dp"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_column="1"
                android:layout_row="1"/>
            <TextView
                android:id="@+id/nameTv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match Played "
                android:textSize="30dp"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_column="0"
                android:layout_row="2"/>
            <TextView
                android:id="@+id/nameTv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match Win     :"
                android:textSize="30dp"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_column="1"
                android:layout_row="2"/>

            <TextView
                android:id="@+id/nameTv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textSize="40dp"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="3"/>
            <TextView
                android:id="@+id/nameTv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match Played "
                android:textSize="30dp"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_column="0"
                android:layout_row="4"/>
            <TextView
                android:id="@+id/nameTv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match Win     :"
                android:textSize="30dp"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_column="1"
                android:layout_row="4"/>
            <TextView
                android:id="@+id/nameTv9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match Played "
                android:textSize="30dp"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_column="0"
                android:layout_row="5"/>
            <TextView
                android:id="@+id/nameTv10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match Win     :"
                android:textSize="30dp"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_column="1"
                android:layout_row="5"/>
        </GridLayout>




    </LinearLayout>

</RelativeLayout>